@{
    ViewData["Title"] = "Product";
}

@model  StoreOfBuild.Web.ViewModels.ProductViewModel

<div class="row header">
    <div class="col-md-12">
        <h3>Product</h3>
        <a href="/Product" class="btn btn-primary">Back</a>
    </div>
</div>

<div class="row form-wrapper">
    <div class="col-md-12">
        <form id="form" class="form-horizontal" asp-controller="Product" asp-action="CreateOrEdit"
        data-ajax="true" data-ajax-method="POST" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/Product'" asp-anti-forgery>
            <input type="hidden" class="form-control" asp-for="Id">
            <div class="form-group">
                <label class="col-md-2 control-label" asp-for="Name">Nome</label>
                <div class="col-md-8">
                    <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" asp-for="CategoryId">Category</label>
                <div class="col-md-8">
                    <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(@Model.Categories, "Id", "Name"))"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" asp-for="Price">Price</label>
                <div class="col-md-8">
                    <input asp-for="Price" type="text" id="price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" asp-for="StockQuantity">Stock Quantity</label>
                <div class="col-md-8">
                    <input asp-for="StockQuantity" type="text" id="stockQuantity" class="form-control">
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
}